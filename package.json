{
  "name": "phd-assistant",
  "version": "5.0.0",
  "main": "main.js",
  "author": "June Drinleng",
  "scripts": {
    "start": "chcp 65001 & electron .",
    "dist": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.example.PhdAssistant",
    "productName": "PhdAssistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*",
      "package.json",
      "favicon.ico",
      "models/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "./assets/favicon_io/android-chrome-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "shortcutName": "PhdAssistant"
    }
  },
  "devDependencies": {
    "@electron/remote": "^2.0.3",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "cheerio": "^1.1.0",
    "fetch-cookie": "^3.1.0",
    "node-fetch": "^3.3.2",
    "tough-cookie": "^5.1.2"
  }
}
